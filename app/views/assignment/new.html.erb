<link href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css" rel="stylesheet" type="text/css"/>
<link href="/stylesheets/ajaxtabs.css" rel="stylesheet" type="text/css"/>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.6/jquery.min.js"></script>
<script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js"></script>

<script>
	$(function() {
		$( "#tabs" ).tabs();
	});
</script>
<% form_tag( {:action => 'create'}, :onsubmit => 'return checkForm();', :onload => 'addElement();')do %>

<div class="demo">
  <h1>New Assignment</h1>
  <p>To create an assignment, fill the forms in the four tabs seen below. Please note that forms in all the four tabs must be filled.</p>
<div id="tabs">
	<ul>
		<li><a href="#tabs-1">Assignment Basics</a></li>
		<li><a href="#tabs-2">Rubrics</a></li>
		<li><a href="#tabs-3">Review Strategy</a></li>
        <li><a href="#tabs-4">Due Dates</a></li>
	</ul>
	<div id="tabs-1">
		<%= render :partial => 'content' %>
	</div>
	<div id="tabs-2">
		<%= render :partial => 'rubrics' %>
	</div>
	<div id="tabs-3">
		<%= render :partial => 'review_strategy'  %>
	</div>
    <div id="tabs-4">
      <%= render :partial => 'due_dates' %>

  <% if @course != nil %>
  	<%= hidden_field_tag('assignment[course_id]', @course.id) %>
  <% else %>
    <%= hidden_field_tag('assignment[course_id]', nil) %>
  <% end %>
  <%= hidden_field_tag('assignment[private]',@private) %>
  &nbsp;&nbsp;<%= submit_tag "Save assignment", :name=>"save" %>
      </div>
</div>
<% end %>
</div>

<div style="padding: 15px">
<%= render :partial => '/shared_scripts/back' %>
</div>